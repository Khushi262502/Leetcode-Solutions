from collections import deque
from typing import List

class Solution:
    def bfsOfGraph(self, V, adj) :
        visited = [False] * V
        result = []
        queue = deque([0])   
        visited[0] = True

        while queue:
            node = queue.popleft()
            result.append(node)

            for neighbor in adj[node]:
                if not visited[neighbor]:
                    visited[neighbor] = True
                    queue.append(neighbor)

        return result
